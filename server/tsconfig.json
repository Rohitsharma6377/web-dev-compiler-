{
    "compilerOptions": {
      "target": "ES2020",
      "module": "Commonjs",
      "rootDir": "./",

      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "sourceMap": true,
      "allowJs": true,
      "experimentalDecorators": true,
    },
    "include": ["scripts/*", "src/**/*", "cli/*", "config/*"]
  }